<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bkg"
    tools:context="com.example.yasi27.final2.MainActivity2">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notes"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="225dp"
        android:layout_marginTop="510dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/note"
        android:layout_toStartOf="@+id/appointment"
        android:layout_marginEnd="207dp"
        android:text="     "
        android:layout_alignEnd="@+id/weight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:layout_marginStart="338dp"
        android:layout_marginEnd="144dp"
        android:background="@drawable/scale2"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/notes"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/notes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bellysize"
        android:background="@drawable/bellysizee"
        android:layout_alignStart="@+id/notes"
        android:layout_alignEnd="@+id/notes"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_alignTop="@+id/appointment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointment"
        android:background="@drawable/calendar1"
        android:layout_marginEnd="83dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="309dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="51dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:layout_below="@+id/weight" />
</RelativeLayout>